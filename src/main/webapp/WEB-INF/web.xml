<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Projet_Agile_Groupe_2</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.xhtml</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.xhtml</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>Accueil</servlet-name>
    <jsp-file>/jsp/test.html</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>Accueil</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

<!-- "/secretaire/profil" => ctrl.secretaireProfilCtrl -->
  <servlet>
    <servlet-name>SecretaireProfil</servlet-name>
    <servlet-class>ctrl.secretaireProfilCtrl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>SecretaireProfil</servlet-name>
    <url-pattern>/secretaire/profil</url-pattern>
  </servlet-mapping>

<!-- "/secretaire/profil/creerCompte" => ctrl.secretaireCreerCompteCtrl -->
  <servlet>
    <servlet-name>SecretaireCreerCompte</servlet-name>
    <servlet-class>ctrl.secretaireCreerCompteCtrl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>SecretaireCreerCompte</servlet-name>
    <url-pattern>/secretaire/profil/creerCompte</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SecretaireCreerCompteFamile</servlet-name>
    <servlet-class>ctrl.secretaireRequestCreerCompteFamile</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>SecretaireCreerCompteFamile</servlet-name>
    <url-pattern>/secretaire/profil/creerCompteFamile</url-pattern>
  </servlet-mapping>

</web-app>
